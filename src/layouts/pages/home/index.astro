---
import Home from "../../paths/home.astro";
import NewsBox from "../../components/news-box.astro";
import DlBox from "../../components/dl-box.astro";
import Defaults from "../../../defaults";
const { lang } = Astro.props,
  filename = "index",
  langfile = `../../lang/${lang}/home/${filename}.json`;

import(`../../css/pages/home/index.css`);

export interface PageRequired {
  meta_title?: string;
  meta_description: string;
  meta_img?: string;
  build_1: string;
  build_1_desc: string;
  build_2: string;
  build_2_desc: string;
  build_3: string;
  build_3_desc: string;
  build_more: string;
  builds: string;
  dlc: string;
  dlc_gme: string;
  dlc_lts: string;
  dlc_ver: string;
  dwl: string;
  more: string;
  news_prev: string;
  typo: string;
  typo_desc: string;
  typo_join: string;
}
const {
  build_1,
  build_1_desc,
  build_2,
  build_2_desc,
  build_3,
  build_3_desc,
  build_more,
  builds,
  dwl,
  more,
  news_prev,
  typo,
  typo_desc,
  typo_join,
  meta_title,
  meta_description,
  meta_img,
} = (await import(/* @vite-ignore */ langfile)) as PageRequired;

const { allowedLanguages, defaultLanguage } = Defaults,
  exlang = lang == (defaultLanguage || allowedLanguages[0]) ? "" : "/" + lang;
---

<Home
  lang={lang}
  filename={filename}
  meta_title={meta_title}
  meta_description={meta_description}
  meta_img={meta_img}
>
  <script src="../../js/pages/home/index.js"></script>
  <div class="typo bgw">
    <span>
      <span
        style="
			background: url(/res/img/theme-min.jpg) no-repeat center center / cover;
			"
      ></span>
      <video id="b01" autoplay muted loop></video>
      <!-- <iframe src="https://www.youtube.com/embed/YXX_1n6EcCo?rel=0&amp;autoplay=1&mute=1&loop=1&playlist=YXX_1n6EcCo&showinfo&controls=0&modestbranding=1" title="Team Fuho" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> -->
      <span style="background: rgba(20, 20, 20, 0.5)"></span>
    </span>
    <div>
      <h1 set:html={typo} />
      <br /><br />
      <div set:html={typo_desc} />
      <a href={exlang + "/comm#form"}>
        <p>
          {typo_join}
        </p>
      </a>
    </div>
  </div>
  <a class="sepa show-on-scroll" href={exlang + "/gallery"}>
    <div class="fromlft" style="margin-left: 4vw">
      <span
        class="circ"
        style="
			width: 20vh;
			bottom: 4.2vh;
			height: 20vh;
			background: #ff7518;
			animation: mhab 3s ease-in-out infinite;
			"
      ></span>
      <span
        class="circ"
        style="
			left: 66%;
			width: 8vh;
			top: 2.4vh;
			height: 8vh;
			background: #ff7518;
			animation: mhab 3s ease-in-out infinite;
			"
      ></span>
    </div>
    <span
      class="frombot"
      style="
		left: 14vw;
		bottom: 0;
		width: 24vw;
		height: 10vh;
		background: #002049;
		border-radius: 100vmax 30vmax 0 0;
		"
    ></span>
    <span
      class="fromtop"
      style="
		right: 16vw;
		top: 0;
		height: 18vh;
		width: 24vw;
		background: #002049;
		border-radius: 0 0 1vmax 8vmax;
		"
    ></span>
    <div class="fromrgt" style="right: -3vw; float: right">
      <span
        class="triag"
        style="
			background: #ff7518;
			top: 8vh;
			animation: mvab 2.9s ease-in-out infinite;
			"
      ></span>
      <span
        class="triag"
        style="
			background: #dafbff;
			top: 15.5vh;
			animation: mvab 2.9s ease-in-out infinite;
			"
      ></span>
    </div>
    <h1 class="hdc">
      {builds}
    </h1>
    <div class="uline">
      <span></span>
    </div>
  </a>
  <div class="builds bgw">
