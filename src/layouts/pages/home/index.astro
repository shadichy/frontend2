      <div class="sub">
        <h1 class="txtd" set:html={build_1} />
        <div class="txtd" set:html={build_1_desc} />
      </div>
      <div class="subimg">
        <img
          loading="lazy"
          width="1920"
          height="1080"
          src="/res/img/theme-min.jpg"
          alt="Team Fuho Vietnam"
        />
      </div>
      <span class="fromrgt" style="background: #002049; right: 0; top: 46vh"
      ></span>
      <span
        class="circ fromlft"
        style="background: #ff7518; left: 0.5%; top: -5vh"></span>
